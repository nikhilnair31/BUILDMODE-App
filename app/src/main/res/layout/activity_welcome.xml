<!-- activity_second.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:contentDescription="@string/appLogoDescription"
        android:src="@mipmap/launcher_foreground"

        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:fontFamily="@font/venus_cormier"
        android:gravity="center|center_vertical"
        android:paddingStart="8dp"
        android:text="@string/appName"

        android:textColor="@color/accent_0"
        android:textSize="72sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonNext"

        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"

        android:layout_width="64dp"
        android:layout_height="64dp"

        app:iconSize="32dp"
        android:backgroundTint="@color/accent_0"
        android:background="@drawable/baseline_keyboard_arrow_right_24"
        android:contentDescription="@string/nextButton"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>