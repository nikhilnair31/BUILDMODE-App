<!-- activity_second.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"

        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="8dp"
        android:fontFamily="@font/venus_cormier"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/featuresText"

        android:textColor="@color/accent_0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="8dp"
        android:background="@drawable/data_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonToMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Username Related-->

        <!-- Permission Related-->

        <TextView
            android:id="@+id/permissionsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/venus_cormier"

            android:gravity="left"

            android:padding="12dp"
            android:text="@string/featuresText"
            android:textColor="@color/accent_1"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />

        <ToggleButton
            android:id="@+id/screenshotToggleButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:paddingStart="32dp"

            app:elevation="0dp"
            android:background="@color/base_0"
            android:drawableTint="@color/accent_1"
            android:checked="false"
            android:drawableStart="@drawable/ic_baseline_screenshot_on_24"
            android:fontFamily="@font/venus_cormier"
            android:stateListAnimator="@null"
            android:textColor="@color/accent_1"
            android:textOff="@string/screenshotToggleOffText"
            android:textOn="@string/screenshotToggleOnText"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featuresTextView" />

        <ToggleButton
            android:id="@+id/textToggleButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:paddingStart="32dp"

            app:elevation="0dp"
            android:checked="false"
            android:enabled="false"
            android:background="@color/base_1"
            android:drawableTint="@color/accent_1"
            android:drawableStart="@drawable/baseline_auto_awesome_24"
            android:fontFamily="@font/venus_cormier"
            android:stateListAnimator="@null"
            android:textColor="@color/accent_1"
            android:textOff="@string/textToggleOffText"
            android:textOn="@string/textToggleOnText"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featuresTextView" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonToMain"

        android:layout_width="0dp"
        android:layout_height="64dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"

        android:enabled="true"
        android:background="@color/accent_1"
        android:contentDescription="@string/stopForgoringText"
        android:fontFamily="@font/venus_cormier"
        android:stateListAnimator="@null"
        android:text="@string/stopForgoringText"
        android:textSize="14sp"
        app:cornerRadius="@dimen/softCorners"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>