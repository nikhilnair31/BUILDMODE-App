<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_0"
                android:contentDescription="@string/appName"
                android:fontFamily="@font/venus_cormier"
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="64dp"
                android:text="@string/appName"
                android:textColor="@color/accent_0"
                android:textSize="80sp"
                app:layout_collapseMode="pin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/searchImagesDescription"
            android:visibility="invisible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/emptyPlaceholder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/venus_cormier"
            android:gravity="center_horizontal|center_vertical"
            android:padding="32dp"
            android:text="@string/noMoreResultsFound"
            android:textColor="@color/accent_1"

            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            tools:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/optionsButtonsLayout"

        android:layout_width="0dp"
        android:layout_height="64dp"

        android:divider="?android:attr/dividerVertical"
        android:showDividers="middle"
        android:dividerPadding="32dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"

        app:layout_constraintBottom_toTopOf="@+id/searchTextLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:visibility="gone"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/fileUploadButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/base_1"
            android:contentDescription="@string/imageSizeChangeDescription"
            android:src="@drawable/outline_upload_file_24"
            app:tint="@color/accent_1" />

        <ImageButton
            android:id="@+id/sizeToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/base_1"
            android:contentDescription="@string/imageSizeChangeDescription"
            android:src="@drawable/baseline_view_module_24"
            app:tint="@color/accent_1" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@color/base_1"
            android:contentDescription="@string/settingsText"
            android:src="@drawable/baseline_settings_24"
            app:tint="@color/accent_1" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchTextLayout"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autofillHints=""
            android:background="@color/accent_0"
            android:fontFamily="@font/venus_cormier"

            android:gravity="start"
            android:hint="@string/searchHint"
            android:inputType="text"
            android:padding="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:stateListAnimator="@null"
            android:textColor="@color/accent_1"
            android:textColorHint="@color/accent_1t"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="14sp"

            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/optionsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/optionsButton"
            android:layout_width="64dp"
            android:layout_height="0dp"
            android:background="@color/accent_0"
            android:contentDescription="@string/settingsText"
            android:src="@drawable/baseline_add_24"
            app:tint="@color/accent_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>