<!-- activity_second.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/venus_cormier"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/settingsText"
        android:textColor="@color/accent_0"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/data_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Username Related -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/venus_cormier"

            android:gravity="start"

            android:padding="12dp"
            android:text="@string/settingsUsernameText"
            android:textColor="@color/accent_1"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints="username"

            android:background="@color/base_0"
            android:editable="false"
            android:fontFamily="@font/venus_cormier"
            android:gravity="center"
            android:hint="@string/settingsAuthHintText"

            android:inputType="text"
            android:padding="24dp"
            android:textAllCaps="false"
            android:textColor="#CACACA"
            android:textColorHint="#CACACA"
            android:textSize="14sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView" />

        <Button
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:enabled="true"
            android:fontFamily="@font/venus_cormier"

            android:padding="24dp"
            android:stateListAnimator="@null"
            android:text="@string/settingsEditUsername"
            android:textSize="14sp"
            app:cornerRadius="@dimen/softCorners"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permissionsTextView" />

        <!-- Saving Related -->

        <Button
            android:id="@+id/userLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:enabled="true"
            android:fontFamily="@font/venus_cormier"

            android:padding="24dp"
            android:stateListAnimator="@null"
            android:text="@string/settingsUserLogout"
            android:textSize="14sp"
            app:cornerRadius="@dimen/softCorners"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/permissionsTextView" />

        <TextView
            android:id="@+id/featuresTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/venus_cormier"

            android:gravity="start"
            android:padding="12dp"
            android:text="@string/featuresText"
            android:textColor="@color/accent_1"
            android:textSize="14sp"

            />

        <ToggleButton
            android:id="@+id/screenshotToggleButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/base_0"

            android:checked="false"
            android:drawableTint="@color/accent_1"
            android:drawableStart="@drawable/ic_baseline_screenshot_on_24"
            android:fontFamily="@font/venus_cormier"
            android:paddingStart="32dp"
            android:stateListAnimator="@null"

            android:textColor="@color/accent_1"
            android:textOff="@string/screenshotToggleOnText"
            android:textOn="@string/screenshotToggleOnText"
            app:elevation="0dp"

            />

        <ToggleButton
            android:id="@+id/textToggleButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:background="@color/base_1"

            android:enabled="false"
            android:checked="false"
            android:drawableTint="@color/accent_1"
            android:drawableStart="@drawable/baseline_auto_awesome_24"
            android:fontFamily="@font/venus_cormier"
            android:paddingStart="32dp"
            android:stateListAnimator="@null"
            android:textColor="@color/accent_1"
            android:textOff="@string/textToggleOffText"
            android:textOn="@string/textToggleOnText"
            app:elevation="0dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/featuresTextView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>