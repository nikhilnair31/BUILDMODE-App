<resources>
    <style name="ThemeOverlay.Forgor.ConfirmDialog"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">

        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Forgor.DialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Forgor.DialogBody</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.Forgor.Dialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Forgor.Dialog.NegativeButton</item>
    </style>

    <!-- Text appearances (M2) -->
    <style name="TextAppearance.Forgor.DialogTitle"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Forgor.DialogBody"
        parent="TextAppearance.MaterialComponents.Body2" />

    <!-- Positive Button -->
    <style name="Widget.Forgor.Dialog.PositiveButton"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <!-- Flat rect shape -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Forgor.DialogButton</item>

        <!-- Colors -->
        <item name="android:backgroundTint">@color/base_0</item>
        <item name="android:textColor">@color/accent_1</item>

        <!-- Bold text -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Forgor.Dialog.NegativeButton"
        parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Shape (no rounded corners) -->
    <style name="ShapeAppearanceOverlay.Forgor.DialogButton"
        parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

</resources>